<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Client</th>
  </tr>

<% for project in @projects %>
  <tr id="project_<%= project.id.to_s %>">
    <td><%=h project.name %></td>
    <td><%=h project.client %></td>
    <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
    <td><a onClick="$.ajax({ type: 'DELETE', url: '<%= admin_project_path(project) %>', beforeSend: function(xhr) { return confirm('Are you sure you want to delete this Project?'); }, success: function(){$('#project_<%= project.id.to_s %>').fadeOut('slow')}})">Delete</a></td>
  </tr>
<% end %>
</table>

<br />
