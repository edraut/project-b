<h1>Editing blog_entry</h1>

<% form_for(@blog_entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :article_image %><br />
    <%= f.text_field :article_image %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @blog_entry %> |
<%= link_to 'Back', blog_entries_path %>
